<FILE_CONTAINING_SELECTION>
local M = {}
CM = require("systems.CardManager")
M.Buttons = {}
M.Buttons.EndTurnButton = require("ui.button")
function M.load()
    M.Buttons.EndTurnButton:new(
        100,
        30,
        "End Turn"
    )
    M.Buttons.EndTurnButton.action = function()
        Game.endTurn = true
    end
end

function M.draw()
    M.Buttons.EndTurnButton:draw(WINDOW_WIDTH * 0.6, WINDOW_HEIGHT * 0.8)
    love.graphics.print(
        "Mana: " .. Player.Mana .. "/" .. Player.MAX_MANA,
        WINDOW_WIDTH * 0.2,
        WINDOW_HEIGHT * 0.8

    )
    --for _, card in ipairs(CM.deck) do
    --    card:draw((WINDOW_WIDTH * 0.1), (WINDOW_HEIGHT * 0.8))
    --end
	

	-- I need to draw the cards in reverse order.
    for i = #CM.deck, -1, 1 do
        local card = CM.deck[i]
        card:draw((WINDOW_WIDTH * 0.1), (WINDOW_HEIGHT * 0.8))
    end
    -- Draws cards and draws hoverdCard with elevation.
    for i = 1, #CM.hand do
        local card = CM.hand[i]
        if card == CM.heldCard then goto continue end
        local x = (WINDOW_WIDTH * 0.35) + (i - 1) * 40
        local y = (WINDOW_HEIGHT * 0.8)

        if card == CM.hoverdCard then
            --x = 200 + (i - 1) * 30 + 80
            y = (WINDOW_HEIGHT * 0.8) - 20
            CM.hoverdCard.y = y
        else
            card:draw(x, y)
        end
        ::continue::
    end
    for _, card in ipairs(CM.discardPile) do
        card:draw((WINDOW_WIDTH * 0.8), (WINDOW_HEIGHT * 0.8))
    end
    if CM.hoverdCard and not CM.heldCard then
        CM.hoverdCard:draw()
    end
    if CM.heldCard then
        CM.heldCard:draw()
    end
end

return M
</FILE_CONTAINING_SELECTION>

